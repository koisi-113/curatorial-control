{%extends "base.njk"%} {%block title%}ホーム画面{%endblock%} {%block content%}

<div
  class="d-flex flex-column justify-content-center align-items-center"
  style="height: 11vh; background-color: #f8f9fa"
>
  <h1 class="text-center fw-bold mb-4" style="color: orange">
    早川研 蔵書管理システム
  </h1>
  <form
    method="get"
    action="/books/search"
    class="d-flex"
    style="width: 75%; margin-left: auto; margin-right: auto; margin: 0"
  >
    <textarea
      type="search"
      name="query"
      class="form-control-lg"
      rows="1"
      placeholder="本の名前を入力"
      required
      style="height: 60px; resize: none; padding: 10px; font-size: 18px"
    ></textarea>
    <button
      type="submit"
      class="btn btn-outline-secondary"
      data-bs-toggle="tooltip"
      title="検索"
      style="border: none; background: none; padding: 0"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-search"
        viewBox="0 0 16 16"
      >
        <path
          d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"
        />
      </svg>
    </button>
  </form>
</div>

<div style="display: flex; justify-content: center; gap: 30px" class="mt-8">
