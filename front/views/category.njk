{% extends "base.njk" %}
{% block title %}カテゴリの一覧{% endblock %}
{% block script %}
{% endblock %}
{% block content %}
<h1 class="ml-5 fw-bold mb-10" style="color: orange">一覧表示</h1>
<div class="d-flex justify-content-end mb-3">
    <a href="/top/categories/add" class="btn btn-success">カテゴリの追加</a>
</div>

<table class="table table-hover">
    <tbody>
    {% if posts and posts.length > 0 %}
    <thead>
        <tr>
          <th scope="col" class="col-1"></th>
          <th scope="col" class="col-5">カテゴリ名</th>
        </tr>
    </thead>
    {%for post in posts%}
    <th scope="row">{{loop.index}}</th>
        <td>{{post.name}}</td>
    </tr>
    {%endfor%}
    {% else %}
        <p class="text-center text-muted">カテゴリがありません。</p>
    {% endif %}
    </tbody>
</table>
{% endblock %}