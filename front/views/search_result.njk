{%extends "base.njk" %} {%block title%}検索結果{%endblock %} {%block content%}
<h1 class="ml-5 fw-bold mb-10" style="color: orange">「{{name}}」の検索結果</h1>
<ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
  <li
    itemprop="itemListElement"
    itemscope
    itemtype="https://schema.org/ListItem"
  >
    <a itemprop="item" href="/top">
      <span itemprop="name">トップ</span>
    </a>
    <meta itemprop="position" content="1" />
  </li>

  <li
    itemprop="itemListElement"
    itemscope
    itemtype="https://schema.org/ListItem"
  >
    <a itemprop="item" href="/top/books/search?query={{name}}">
      <span itemprop="name">検索結果</span>
    </a>
    <meta itemprop="position" content="2" />
  </li>
</ol>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col" class="col-1"></th>
      <th scope="col" class="col-5">著書名</th>
      <th scope="col" class="col-3">著者名</th>
      <th scope="col" class="col-3">貸出</th>
    </tr>
  </thead>
  <tbody>
    {%for book in books%}
    <tr
      onclick="window.location.href=`top/books/${book.id}`"
      data-bs-toggle="tooltip"
      title="{{book.name}}の詳細ページへ"
      style="cursor: pointer"
    >
      <th scope="row">{{loop.index}}</th>
      <td>{{book.name}}</td>
      <td>{{book.author}}</td>
      <td>{%if book.is_borrowing%} 貸出中 {%else%} 利用可能 {%endif%}</td>
    </tr>
    {%endfor%}
  </tbody>
</table>
{%endblock%}
