{% extends "base.njk" %} {% block title %}ユーザー情報更新ページ{% endblock %}
{% block content %}
<h1 class="ml-5 fw-bold mb-10" style="color: orange">カテゴリー情報の更新</h1>
<ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
  <li
    itemprop="itemListElement"
    itemscope
    itemtype="https://schema.org/ListItem"
  >
    <a itemprop="item" href="/top">
      <span itemprop="name">トップ</span>
    </a>
    <meta itemprop="position" content="1" />
  </li>

  <li
    itemprop="itemListElement"
    itemscope
    itemtype="https://schema.org/ListItem"
  >
    <a itemprop="item" href="/top/categories">
      <span itemprop="name">カテゴリー一覧</span>
    </a>
    <meta itemprop="position" content="2" />
  </li>

  <li
    itemprop="itemListElement"
    itemscope
    itemtype="https://schema.org/ListItem"
  >
    <a itemprop="item" href="/top/categories/{{ category.id }}">
      <span itemprop="name">カテゴリー編集</span>
    </a>
    <meta itemprop="position" content="3" />
  </li>
</ol>

<div class="d-flex justify-content-end mb-3">
  <form class＝"text-right" action="/top/categories/{{ category.id }}?_method=DELETE" method="POST" style="display: inline; margin-left: auto">
    <button type="submit" class="btn btn-outline-danger btn-lg">
      削除
    </button>
  </form>
</div>

<form
  action="/top/categories/{{ category.id }}?_method=PUT"
  method="POST"
  class="form-floating ml-4 mb-3"
>
  <input type="hidden" name="category_id" value="{{ category.id }}" />

  <div name="category-name">
    <label for="name" class="fs-3 mb-2 fw-semibold">カテゴリー名
    </label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="{{ category.name }}"
      required
      style="height: 30px; resize: none; padding: 10px; font-size: 14px"
    />
  </div>

  
  <div style="display: flex; justify-content: space-between; margin-top: 20px">
    <button type="submit" class="btn btn-outline-danger btn-lg">
      更新する
    </button>
    
    <a href="/top/categories" class="btn btn-outline-danger btn-lg"> キャンセル </a>
  </div>
</form>
{% endblock %}