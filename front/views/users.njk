<!doctype html>
<html lang="ja">
  <head>
    <link rel="stylesheet" href="style.css" type="text/css">
  <meta charset="UTF-8">
  <title>ユーザー一覧</title>
</head>
  <body>
    <h1 class="title">ユーザー一覧</h1>

  <table class="table table-hover">
    <tr>
      <th>ユーザー名</th>
    </tr>
    {% for user in users%}
    <tr
      onclick="window.location.href=`top/users/add`"
      data-bs-toggle="tooltip"
      title="ユーザー追加のページへ"
      style="cursor: pointer"
    >
    <tr
      onclick="window.location.href=`top/users/${users.id}`"
      data-bs-toggle="tooltip"
      title="{{users.id}}の詳細ページへ"
      style="cursor: pointer"
    >
      <th scope="row">{{loop.index}}</th>
      <td>{{users.name}}</td>
      <td>{{users.author}}</td>
    </tr>
    {%endfor%}
</body>
</html>